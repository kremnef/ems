}


function isSystemObject(cl) {
    var interfaces = cl.getInterfaces();
    for (var i = 0; i < interfaces.length; i++) {
        if (interfaces[i].getSimpleName().equals('SystemObject')) {
            return true;
        }
    }
    return false;
}

