<fd:form xmlns:fd="http://apache.org/cocoon/forms/1.0#definition"
        xmlns:i18n="http://apache.org/cocoon/i18n/2.1">
    <fd:widgets>
        <fd:field id="name" state="disabled">
            <fd:label>
                <i18n:text catalogue="core" key="DocumentType.name"/>
            </fd:label>
            <fd:datatype base="string"/>
        </fd:field>

        <fd:field id="path" state="disabled">
            <fd:label>
                <i18n:text catalogue="core" key="DocumentType.path"/>
            </fd:label>
            <fd:datatype base="string"/>

        </fd:field>

        <fd:booleanfield id="advertisement">
            <fd:initial-value>false</fd:initial-value>
            <fd:label>
                <i18n:text catalogue="core" key="DocumentType.advertisement"/>
            </fd:label>
        </fd:booleanfield>

        <fd:field id="type" state="invisible">
            <fd:label>
                <i18n:text catalogue="core" key="DocumentType.type"/>
            </fd:label>
            <fd:datatype base="integer"/>
        </fd:field>

        <fd:submit id="saveDocumentType">
            <fd:label><i18n:text key="Save"/></fd:label>
        </fd:submit>
    </fd:widgets>
</fd:form>